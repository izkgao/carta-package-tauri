{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CARTA",
  "version": "5.0.3",
  "identifier": "CARTA-tauri",
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "windows": {
      "webviewInstallMode": {
        "type": "skip"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "desktopTemplate": "templates/carta.desktop"
      },
      "rpm": {
        "desktopTemplate": "templates/carta.desktop"
      }
    },
    "active": true,
    "resources": [
      "backend/bin/carta_backend",
      "backend/etc/**/*",
      "backend/libs/**/*",
      "frontend/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "description": "FITS image",
        "ext": ["fits", "fits.gz", "fit", "fit.gz", "fts", "fts.gz", "fz"]
      },
      {
        "description": "CASA image",
        "ext": ["image", "casa"]
      },
      {
        "description": "IDIA HDF5 image",
        "ext": ["hdf5", "h5"]
      },
      {
        "description": "MIRIAD image",
        "ext": ["miriad"]
      },
      {
        "description": "XRADIO Zarr image",
        "ext": ["zarr"]
      }
    ]
  }
}
