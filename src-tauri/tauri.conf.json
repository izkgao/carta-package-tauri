{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CARTA",
  "version": "4.1.0",
  "identifier": "CARTA-tauri",
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "macOS": {
      "entitlements": "./Entitlements.plist"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "skip"
      }
    },
    "active": true,
    "resources": [
      "backend/bin/carta_backend",
      "backend/etc/**/*",
      "backend/libs/**/*",
      "frontend/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
